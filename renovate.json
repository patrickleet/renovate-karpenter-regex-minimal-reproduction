{
  "extends": ["config:recommended", ":dependencyDashboard"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "\\.yaml$"
      ],
      "matchStrings": [
        "RENOVATE-HELPER:\\s*packageName=(?<packageName>.*?)\\s*chart:\\s*name:\\s*.*\\s*repository:\\s*.*\\s*version:\\s*(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}